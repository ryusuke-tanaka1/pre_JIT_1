<div class="container text-center">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>記事一覧</h1>
      <p><%= link_to "記事新規作成", new_user_article_path(@user), class: "btn btn-primary btn-block" %></p>
      <table class="table table-bordered table-condenced">
        <thead>
          <tr>
            <th>詳細表示</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>画像</th>
            <th>編集・削除</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= link_to "詳細", user_article_path(@user, article), class: "btn btn-primary" %></td>
              <td><%= article.title %></td>
              <td><%= article.content %></td>
              <td>
                <% if article.img.present? %>
                  <%= image_tag article.img.url, class: "article-img" %>
                <% end %>
              </td>
              <td class="article-buttons">
                <%= link_to "編集", edit_user_article_path(@user, article), class: "btn btn-success" %>
                <%= button_to "削除", user_article_path(@user, article), method: :delete, class: "btn btn-danger", data: { confirm: "本当に削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>