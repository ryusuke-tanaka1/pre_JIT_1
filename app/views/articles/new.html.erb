<div class="container text-center">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>記事の新規作成</h1>
      <div class="text-start">
        <%= form_with(model: @user, url: user_articles_path, method: :post, local: true) do |f| %>
          <%= f.fields_for :articles do |article| %>
            <%= article.label :title, class: "text-start" %>
            <%= article.text_field :title, class: "form-control" %>

            <%= article.label :content, class: "text-start" %>
            <%= article.text_area :content, class: "form-control" %>
            
            <%= article.label :img, class: "text-start" %>
            <%= article.file_field :img, class: "form-control" %>
          <% end %>
          <div class="text-center">
            <%= f.submit "新規作成", class: "btn btn-primary" %>
          </div>
        <% end %>
        <p><%= link_to "戻る", user_articles_path(@user), class: "text-start" %></p>
      </div>
    </div>
  </div>
</div>